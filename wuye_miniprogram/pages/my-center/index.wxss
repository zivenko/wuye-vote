page {
  background-color: #f5f5f5;  /* 可以改成你想要的颜色 */
}
.profile {
  padding-bottom: 200rpx;
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  margin-top: 40rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.username {
  margin-top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

/* 登录按钮样式 */
.login-btn {
  margin-top: 60rpx;
  width: 240rpx !important;
  height: 80rpx !important;
  align-self: center;
  display: flex !important;
  align-items: center;
  justify-content: center;
}
