page {
    padding-top: 40rpx;
    background-color: #f5f5f5;
}

.container {
    padding: 20rpx;
    background-color: #F5F5F5;
  }

.add-house {
    border: 0;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    background-color: #fff;
}

.add-house .plus {
color: #FF4D4F;
margin-right: 8rpx;
font-size: 32rpx;
}

.add-house text {
color: #333;
font-size: 28rpx;
}

.house-item {
background-color: #FFFFFF;
border-radius: 12rpx;
margin-bottom: 20rpx;
padding: 20rpx 24rpx;  /* 添加整体内边距 */
}

.status-bar {
display: flex;
justify-content: space-between;
align-items: center;
padding: 16rpx 24rpx;
background-color: #FEF1F1;
border-radius: 8rpx;
margin-bottom: 20rpx;  /* 添加底部间距 */
}

.time {
font-size: 24rpx;
color: #333;
}

.status {
font-size: 24rpx;
color: #FF4D4F;
}

.house-title {
font-size: 32rpx;
font-weight: bold;
margin-bottom: 12rpx;  /* 改用 margin 代替 padding */
}

.house-type {
font-size: 28rpx;
color: #666;
padding: 0 24rpx 24rpx 24rpx;
}

.house-image {
width: 100%;
height: 300rpx;
padding: 0 24rpx;
box-sizing: border-box;
}

.house-image image {
width: 100%;
height: 100%;
border-radius: 8rpx;
}

.house-area {
display: flex;
flex-direction: column;
padding: 24rpx;
font-size: 28rpx;
color: #666;
}

.house-desc {
padding: 0 24rpx 24rpx 24rpx;
font-size: 24rpx;
color: #999;
}