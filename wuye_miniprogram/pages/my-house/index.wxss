page {
    padding-top: 40rpx;
    background-color: #f5f5f5;
}

.container {
    padding: 20rpx;
    min-height: 100vh;
    background-color: #f7f8fa;
}

.add-house {
    border: 0;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    background-color: #fff;
}

.add-house .plus {
    color: #FF4D4F;
    margin-right: 8rpx;
    font-size: 32rpx;
}

.add-house text {
    color: #333;
    font-size: 28rpx;
}

.house-list {
    padding-bottom: 120rpx;
}

.house-item {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
}

.house-info {
    position: relative;
}

.house-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #323233;
    margin-bottom: 16rpx;
}

.house-status {
    margin-top: 16rpx;
}

.status-text {
    display: inline-block;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
}

.status-text.pending {
    background-color: #e8f3ff;
    color: #1989fa;
}

.status-text.failed {
    background-color: #fef0f0;
    color: #f56c6c;
}

.error-msg {
    font-size: 24rpx;
    color: #f56c6c;
    margin-left: 12rpx;
}

.house-action {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 120rpx 0;
}

.empty-image {
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 20rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #969799;
}

.add-button {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx;
    background-color: #fff;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16rpx 24rpx;
    background-color: #FEF1F1;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
}

.time {
    font-size: 24rpx;
    color: #333;
}

.status {
    font-size: 24rpx;
    color: #FF4D4F;
}

.house-type {
    font-size: 28rpx;
    color: #666;
    padding: 0 24rpx 24rpx 24rpx;
}

.house-image {
    width: 100%;
    height: 300rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.house-image image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.house-area {
    display: flex;
    flex-direction: column;
    padding: 24rpx;
    font-size: 28rpx;
    color: #666;
}

.house-desc {
    padding: 0 24rpx 24rpx 24rpx;
    font-size: 24rpx;
    color: #999;
}

.house-actions {
    display: flex;
    justify-content: flex-end;
    padding: 0 24rpx;
}

.unbind-btn {
    margin: 0;
    padding: 0 32rpx;
    height: 56rpx;
    line-height: 56rpx;
    font-size: 24rpx;
    color: #FF4D4F;
    background: #FFF;
    border: 2rpx solid #FF4D4F;
    border-radius: 28rpx;
}

.unbind-btn::after {
    border: none;
}