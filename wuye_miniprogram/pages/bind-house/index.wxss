.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.cell-group-wrapper {
  margin: 0 0 20rpx 0;
  background: #fff;
  width: 100%;
}

.custom-cell {
  width: 100% !important;
  height: 108rpx !important;
  padding: 20rpx 32rpx !important;
  display: flex !important;
  align-items: center !important;
  box-sizing: border-box !important;
}

.custom-cell .van-cell__title {
  flex: none !important;
  width: 180rpx !important;
  font-size: 28rpx !important;
}

.custom-cell .van-cell__value {
  flex: 1 !important;
  text-align: right !important;
  margin-right: 10rpx !important;
  color: #969799 !important;
  font-size: 28rpx !important;
}

.upload-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.upload-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 10rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 20rpx;
}

.submit-section {
  margin: 40rpx 0;
  padding: 0 30rpx;
}

.tips {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.8;
} 