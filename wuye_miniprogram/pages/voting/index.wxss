/* pages/voting/index.wxss */
page {
  background-color: #F5F5F5;
}

.header {
  padding-left: 20rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bolder;
  display: block;
  margin-bottom: 16rpx;
  text-align: center;
  padding: 20rpx 0;
  background-color: #fff;
}

.sub-title {
  padding-left: 20rpx;
  font-size: 36rpx;
  padding-top: 20rpx;
  display: block;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.vote-info {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.vote-info text {
  display: block;
  margin-bottom: 8rpx;
}

.container {
    margin: 30rpx;
    padding: 24rpx;
    border-radius: 12rpx;
    background: #FFFFFF;
}

.vote-description {
  margin-bottom: 20rpx;
  
}

.description-title {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.description-list text {
  display: block;
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 8rpx;
}

.options-container {
  background: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.options-title {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 24rpx;
}

.option-list {
  margin-top: 20rpx;
}

.option-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-item.selected {
  background-color: #e6f3ff;
  border: 1px solid #007AFF;
}

.selected-mark {
  color: #007AFF;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.radio-item radio {
  margin-right: 20rpx;
}

.submit-btn {
  background: #007AFF;
  color: #FFFFFF;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 40rpx 0;
}

.footer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.voted-option {
  margin: 20rpx 0;
  padding: 20rpx;
}

.voted-option .option-item.selected {
  background-color: #e6f3ff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #007AFF;
}

.voted-tip {
  text-align: center;
  color: #007AFF;
  margin: 30rpx 0;
  font-size: 28rpx;
}

.checkbox-group {
  display: flex;
  flex-direction: column;
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.checkbox-item checkbox {
  margin-right: 20rpx;
}