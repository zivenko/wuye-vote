.login-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-button.primary {
  background: #07c160;
  color: #fff;
  border: none;
}

.login-button.default {
  background: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}

.login-button.mini {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 24rpx;
} 